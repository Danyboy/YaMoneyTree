<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".YaMoneyTreeActivity$PlaceholderFragment">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true" android:weightSum="1">
        <ProgressBar
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/progressBar" android:layout_gravity="right" android:layout_weight="0.26"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/txtDisplay" android:inputType="textMultiLine" android:layout_weight="0.26"/>
        <ListView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/listView" android:layout_weight="0.26"/>
    </LinearLayout>

</RelativeLayout>
